<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.materialesuabc">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@mipmap/custom_ic_launcher"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PerfilActivity"
            android:label="@string/perfil"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PerfilEditarActivity"
            android:label="@string/editar"
            android:parentActivityName=".PerfilActivity" />
        <!-- android:label="Perfil" -->
        <!-- android:parentActivityName=".MainActivity" /> -->
        <activity
            android:name=".UnidadesActivity"
            android:label="Unidades"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".InformacionActivity"
            android:label="Informacion"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MateriasActivity"
            android:label="Materias"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TriviaActivity"
            android:label="Trivia" />
        <activity android:name=".ScreenSlidePagerActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".LibrosActivity"
            android:parentActivityName=".MainActivity"
            android:label="Libros"/>
        <activity android:name=".PresentacionActivity"
            android:parentActivityName=".MainActivity"
            android:label="Presentacion"
            ></activity>
    </application>

</manifest>